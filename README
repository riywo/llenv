## INSTALL
$ git clone *** ~/.llenv
$ vim ~/.bashrc
export LLENV_ROOT=$HOME/.llenv
[[ -f "$LLENV_ROOT/etc/bashrc" ]] && source $LLENV_ROOT/etc/bashrc
$ source ~/.bashrc
$ cd ~/.llenv
$ ./llenv-install
(needed re-login?)

## USAGE
$ cd ~/.llenv
$ mkdir apps
$ cd apps
$ llenv setup perl perl-5.14.2 ikachan
$ cd ikachan
$ carton install App::Ikachan
$ llenv exec ikachan

$ llenv install ikachan
$ which ikachan
$ ikachan

